<body>

<button class="button" onclick="copyToClipboard(this, '#f7f0e7', '#494949')"></button>
<button class="button button3" onclick="copyToClipboard(this, '#f89aaa', '#494949')"></button>
<button class="button button4" onclick="copyToClipboard(this, '#f9728c', '#494949')"></button>
<button class="button button5" onclick="copyToClipboard(this, '#494949', '#2f272d')"></button>

<script>
function copyToClipboard(button, text, activeColor) {
    navigator.clipboard.writeText(text).catch(function(err) {
        console.error("Failed to copy: ", err);
    });
    
    let originalColor = button.style.backgroundColor;
    button.style.backgroundColor = activeColor;

    
    setTimeout(() => {
        button.style.backgroundColor = originalColor;
    }, 300); // Farbe bleibt 300ms sichtbar
}
</script>

</body>
